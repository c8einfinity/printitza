<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Sales::sales">

                    <resource id="BrainActs_SalesRepresentative::sales_representative" title="Sales Representative" translate="title" sortOrder="10">
                        <resource id="BrainActs_SalesRepresentative::sales_representative_dashboard" title="Dashboard" translate="title" sortOrder="5">
                            <resource id="BrainActs_SalesRepresentative::sales_representative_dashboard_request" title="Request Withdrawal" translate="title" sortOrder="10" />
                        </resource>
                        <resource id="BrainActs_SalesRepresentative::sales_representative_withdrawals" title="Withdrawals" translate="title" sortOrder="10">
                            <resource id="BrainActs_SalesRepresentative::sales_representative_withdrawals_save" title="Create" translate="title" sortOrder="10" />
                            <resource id="BrainActs_SalesRepresentative::sales_representative_withdrawals_delete" title="Delete" translate="title" sortOrder="20" />
                        </resource>
                        <resource id="BrainActs_SalesRepresentative::sales_representative_member" title="Members" translate="title" sortOrder="20">
                            <resource id="BrainActs_SalesRepresentative::sales_representative_member_save" title="Save Page" translate="title" sortOrder="10" />
                            <resource id="BrainActs_SalesRepresentative::sales_representative_member_delete" title="Delete Page" translate="title" sortOrder="20" />
                        </resource>
                        <resource id="BrainActs_SalesRepresentative::sales_representative_customers" title="Customer Requests" translate="title" sortOrder="30">
                            <resource id="BrainActs_SalesRepresentative::sales_representative_customer_approve" title="Approve Request" translate="title" sortOrder="10" />
                            <resource id="BrainActs_SalesRepresentative::sales_representative_customer_reject" title="Reject Request" translate="title" sortOrder="20" />
                        </resource>
                    </resource>

                </resource>

                <resource id="Magento_Reports::report">
                    <resource id="BrainActs_SalesRepresentative::report" title="Sales Representative"  translate="title" sortOrder="10">
                        <resource id="BrainActs_SalesRepresentative::report_products" title="By Products" translate="title" sortOrder="10" />
                        <resource id="BrainActs_SalesRepresentative::report_customers" title="By Customers" translate="title" sortOrder="20" />
                        <resource id="BrainActs_SalesRepresentative::report_orders" title="By Orders" translate="title" sortOrder="30" />
                        <resource id="BrainActs_SalesRepresentative::report_profit" title="By SR" translate="title" sortOrder="40" />

                    </resource>
                </resource>

                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="BrainActs_SalesRepresentative::config_representative" title="Representative Section" translate="title" sortOrder="60" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
