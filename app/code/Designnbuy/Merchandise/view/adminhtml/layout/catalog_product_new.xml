<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">

    <body>
        <referenceBlock name="product_form">
            <block name="product.form.modulename.matrix" class="Designnbuy\Merchandise\Block\Adminhtml\Catalog\Product\Edit\Tab\Area" template="Designnbuy_Merchandise::catalog/product/edit/tab/custom.phtml" as="product_configarea">
                <arguments>
                    <argument name="config" xsi:type="array">
                        <item name="collapsible" xsi:type="boolean">false</item>
                        <item name="label" xsi:type="string" translate="true" />
                        <item name="sortOrder" xsi:type="string">1000</item>
                        <item name="canShow" xsi:type="boolean">true</item>
                        <item name="componentType" xsi:type="string">fieldset</item>
                        <item name="provider" xsi:type="string">product_form.product_form_data_source</item>
                        <item name="form" xsi:type="string">product_form.product_form</item>
                        <item name="modal" xsi:type="string">configureAreaModal</item>
                        <item name="nameStepWizard" xsi:type="string">configarea-steps-wizard</item>
                        <item name="dataScope" xsi:type="string">productFormCustommodule</item>
                        <item name="urlWizard" xsi:type="string">merchandise/index/configarea</item>
                    </argument>
                </arguments>
            </block>
            <block name="product.form.merchandise.configarea" class="Designnbuy\Merchandise\Block\Adminhtml\Catalog\Product\Edit\Tab\Area" template="Designnbuy_Merchandise::catalog/product/edit/tab/custom.phtml" as="product_edit_configarea">
                <arguments>
                    <argument name="config" xsi:type="array">
                        <item name="collapsible" xsi:type="boolean">false</item>
                        <item name="label" xsi:type="string" translate="true" />
                        <item name="sortOrder" xsi:type="string">1000</item>
                        <item name="canShow" xsi:type="boolean">true</item>
                        <item name="componentType" xsi:type="string">fieldset</item>
                        <item name="provider" xsi:type="string">product_form.product_form_data_source</item>
                        <item name="form" xsi:type="string">product_form.product_form</item>
                        <item name="modal" xsi:type="string">configureAreaModal</item>
                        <item name="nameStepWizard" xsi:type="string">configarea-steps-wizard</item>
                        <item name="dataScope" xsi:type="string">productFormCustommodule</item>
                        <item name="urlWizard" xsi:type="string">merchandise/index/configarea</item>
                    </argument>
                </arguments>
            </block>

        </referenceBlock>
    </body>
</page>