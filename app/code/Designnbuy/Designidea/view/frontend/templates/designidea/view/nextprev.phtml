/**
 * Designidea designidea next and prev designidea links
 *
 * @var $block \Designnbuy\Designidea\Block\Designidea\View\NextPrev
 */
?>

<?php if ($block->displayLinks()) { ?>
    <?php
        $prevDesignidea = $this->getPrevDesignidea();
        $nextDesignidea = $this->getNextDesignidea();
    ?>
    <?php if ($prevDesignidea || $nextDesignidea) { ?>
        <div class="designidea-nextprev-hld clearfix">
            <?php if ($prevDesignidea) { ?>
                <?php $title = $block->escapeHtml($prevDesignidea->getTitle()) ?>
                <a class="nextprev-link prev-link" href="<?php echo $prevDesignidea->getDesignideaUrl() ?>" title="<?php echo __('Read %1',$title) ?>">
                    <?php echo __('&larr; Previous') ?>
                </a>
            <?php } ?>
            <?php if ($nextDesignidea) { ?>
                <?php $title = $block->escapeHtml($nextDesignidea->getTitle()) ?>
                <a class="nextprev-link next-link" href="<?php echo $nextDesignidea->getDesignideaUrl() ?>" title="<?php echo __('Read %1',$title) ?>">
                    <?php echo __('Next &rarr;') ?>
                </a>
            <?php } ?>
        </div>
    <?php } ?>
<?php } ?>
