<?php if ($block->displayBackgrounds()) { ?>
    <?php $_backgroundCollection = $block->getBackgroundCollection(); ?>
    <?php if ($_backgroundCollection->count()) { ?>
    <div class="block related">
        <div class="block-title title">
            <strong id="block-relatedbackgrounds-heading" role="heading" aria-level="2">
                <?php echo __('Related Backgrounds') ?>
            </strong>
        </div>
        <ol class="block-content">
            <?php foreach ($_backgroundCollection as $_background) { ?>
                <li class="item">
                    <a class="background-item-link"
                       href="<?php echo $_background->getBackgroundUrl() ?>">
                        <?php echo $block->escapeHtml($_background->getTitle()); ?>
                    </a>
                </li>
            <?php } ?>
        </ol>
    </div>
    <?php } ?>
<?php } ?>