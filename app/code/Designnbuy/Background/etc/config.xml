<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <dnbbackground>
            <general>
                <enabled>1</enabled>
            </general>
            <index_page>
                <title>Background</title>
            </index_page>
            <background_view>
                <related_backgrounds>
                    <enabled>1</enabled>
                    <number_of_backgrounds>5</number_of_backgrounds>
                </related_backgrounds>
                <related_products>
                    <enabled>1</enabled>
                    <number_of_products>5</number_of_products>
                </related_products>
                <comments>
                    <type>facebook</type>
                    <number_of_comments>4</number_of_comments>
                </comments>
                <nextprev>
                    <enabled>1</enabled>
                </nextprev>
            </background_view>
            <background_list>
                <backgrounds_per_page>10</backgrounds_per_page>
                <lazyload_padding>200</lazyload_padding>
            </background_list>
            <author>
                <enabled>1</enabled>
                <page_enabled>1</page_enabled>
            </author>
            <sidebar>
                <search>
                    <enabled>1</enabled>
                    <sort_order>10</sort_order>
                </search>
                <categories>
                    <enabled>1</enabled>
                    <show_backgrounds_count>1</show_backgrounds_count>
                    <sort_order>20</sort_order>
                </categories>
                <recent_backgrounds>
                    <enabled>1</enabled>
                    <backgrounds_per_page>5</backgrounds_per_page>
                    <sort_order>30</sort_order>
                </recent_backgrounds>
                <archive>
                    <enabled>1</enabled>
                    <sort_order>40</sort_order>
                </archive>
                <tag_claud>
                    <enabled>1</enabled>
                    <!-- <max_tags_number>10</max_tags_number> -->
                    <sort_order>45</sort_order>
                </tag_claud>
                <rss_feed>
                    <title>Background Rss</title>
                    <sort_order>50</sort_order>
                </rss_feed>
            </sidebar>
            <product_page>
                <related_backgrounds_enabled>1</related_backgrounds_enabled>
                <number_of_related_backgrounds>5</number_of_related_backgrounds>
            </product_page>
            <permalink>
                <route>background</route>
                <type>default</type>
                <background_route>background</background_route>
                <category_route>category</category_route>
                <archive_route>archive</archive_route>
                <tag_route>tag</tag_route>
                <author_route>author</author_route>
                <search_route>search</search_route>
            </permalink>
            <top_menu>
                <show_item>1</show_item>
                <item_text>Background</item_text>
            </top_menu>
        </dnbbackground>
    </default>
</config>
