<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <dnbconfigarea>
            <general>
                <enabled>1</enabled>
            </general>
            <index_page>
                <title>Design Area</title>
            </index_page>
            <configarea_view>
                <related_configareas>
                    <enabled>1</enabled>
                    <number_of_configareas>5</number_of_configareas>
                </related_configareas>
                <related_products>
                    <enabled>1</enabled>
                    <number_of_products>5</number_of_products>
                </related_products>
                <comments>
                    <type>facebook</type>
                    <number_of_comments>4</number_of_comments>
                </comments>
                <nextprev>
                    <enabled>1</enabled>
                </nextprev>
            </configarea_view>
            <configarea_list>
                <configareas_per_page>10</configareas_per_page>
                <lazyload_padding>200</lazyload_padding>
            </configarea_list>
            <author>
                <enabled>1</enabled>
                <page_enabled>1</page_enabled>
            </author>
            <sidebar>
                <search>
                    <enabled>1</enabled>
                    <sort_order>10</sort_order>
                </search>
                <categories>
                    <enabled>1</enabled>
                    <show_configareas_count>1</show_configareas_count>
                    <sort_order>20</sort_order>
                </categories>
                <recent_configareas>
                    <enabled>1</enabled>
                    <configareas_per_page>5</configareas_per_page>
                    <sort_order>30</sort_order>
                </recent_configareas>
                <archive>
                    <enabled>1</enabled>
                    <sort_order>40</sort_order>
                </archive>
                <tag_claud>
                    <enabled>1</enabled>
                    <!-- <max_tags_number>10</max_tags_number> -->
                    <sort_order>45</sort_order>
                </tag_claud>
                <rss_feed>
                    <title>Design Area Rss</title>
                    <sort_order>50</sort_order>
                </rss_feed>
            </sidebar>
            <product_page>
                <related_configareas_enabled>1</related_configareas_enabled>
                <number_of_related_configareas>5</number_of_related_configareas>
            </product_page>
            <permalink>
                <route>configarea</route>
                <type>default</type>
                <configarea_route>configarea</configarea_route>
                <category_route>category</category_route>
                <archive_route>archive</archive_route>
                <tag_route>tag</tag_route>
                <author_route>author</author_route>
                <search_route>search</search_route>
            </permalink>
            <top_menu>
                <show_item>1</show_item>
                <item_text>Design Area</item_text>
            </top_menu>
        </dnbconfigarea>
    </default>
</config>
