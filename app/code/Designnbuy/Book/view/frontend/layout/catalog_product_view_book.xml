<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <css src="Designnbuy_Book::css/bookmodule.css"/>
    </head>
    <body>
        <attribute name="class" value="book-product"/>
        <referenceBlock name="product.info.media" remove="true" />
        <referenceBlock name="product.info.details" remove="true" />
        <referenceBlock name="product.info.calculatorshipping" remove="true" />


            <referenceBlock name="product.info.options">
                <action method="setTemplate">
                    <argument name="template" xsi:type="string">Designnbuy_Book::product/view/options.phtml</argument>
                </action>
            </referenceBlock>


    </body>
</page>    