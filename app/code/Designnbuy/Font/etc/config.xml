<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <dnbfont>
            <general>
                <enabled>1</enabled>
            </general>
            <index_page>
                <title>Font</title>
            </index_page>
            <font_view>
                <related_fonts>
                    <enabled>1</enabled>
                    <number_of_fonts>5</number_of_fonts>
                </related_fonts>
                <related_products>
                    <enabled>1</enabled>
                    <number_of_products>5</number_of_products>
                </related_products>
                <comments>
                    <type>facebook</type>
                    <number_of_comments>4</number_of_comments>
                </comments>
                <nextprev>
                    <enabled>1</enabled>
                </nextprev>
            </font_view>
            <font_list>
                <fonts_per_page>10</fonts_per_page>
                <lazyload_padding>200</lazyload_padding>
            </font_list>
            <author>
                <enabled>1</enabled>
                <page_enabled>1</page_enabled>
            </author>
            <sidebar>
                <search>
                    <enabled>1</enabled>
                    <sort_order>10</sort_order>
                </search>
                <categories>
                    <enabled>1</enabled>
                    <show_fonts_count>1</show_fonts_count>
                    <sort_order>20</sort_order>
                </categories>
                <recent_fonts>
                    <enabled>1</enabled>
                    <fonts_per_page>5</fonts_per_page>
                    <sort_order>30</sort_order>
                </recent_fonts>
                <archive>
                    <enabled>1</enabled>
                    <sort_order>40</sort_order>
                </archive>
                <tag_claud>
                    <enabled>1</enabled>
                    <!-- <max_tags_number>10</max_tags_number> -->
                    <sort_order>45</sort_order>
                </tag_claud>
                <rss_feed>
                    <title>Font Rss</title>
                    <sort_order>50</sort_order>
                </rss_feed>
            </sidebar>
            <product_page>
                <related_fonts_enabled>1</related_fonts_enabled>
                <number_of_related_fonts>5</number_of_related_fonts>
            </product_page>
            <permalink>
                <route>font</route>
                <type>default</type>
                <font_route>font</font_route>
                <category_route>category</category_route>
                <archive_route>archive</archive_route>
                <tag_route>tag</tag_route>
                <author_route>author</author_route>
                <search_route>search</search_route>
            </permalink>
            <top_menu>
                <show_item>1</show_item>
                <item_text>Font</item_text>
            </top_menu>
        </dnbfont>
    </default>
</config>
