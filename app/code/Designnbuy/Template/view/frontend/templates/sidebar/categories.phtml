<?php $items = $this->getGroupedChilds(); ?>

<?php if (count($items)) { ?>

    <div class="widget block block-categories" data-bind="scope: 'categories'">
        <div class="block-title sidebar-title">
            <strong><?php echo __('Categories') ?></strong>
        </div>
        <div class="category-filter">
            <ul class="o-list"  id="accordion-2">
                <?php
                $level = 0;
                $first = true;
                foreach($items as $item) {
                $newLevel = $item->getLevel();

                if($item->getTemplateIncludeInMenu() != "" && $item->getTemplateIncludeInMenu() != 1){
                    continue;
                }
                
                if ($level == $newLevel && !$first) {
                    echo '</li>';
                }
                /*if($this->getCurrentCategory()->getEntityId() == $item->getEntityId()){
                    echo "active";
                }*/
                if ($level < $newLevel) {
                    if($this->getCurrentCategory() && $this->getCurrentCategory()->getEntityId() == $item->getEntityId()){
                        //echo "getCurrentCategory".$this->getCurrentCategory()->getId();
                        echo '<span class="faicon faicon-minus"></span>';
                        echo '<ul class="o-list o-list--unstyled" style="display:block">';
                    } else {
                        echo '<span class="faicon faicon-plus"></span>';
                        echo '<ul class="o-list o-list--unstyled" style="display:none">';
                    }

                }
                //<ul class="o-list o-list--unstyled" style="display:none">
                if ($level > $newLevel) {
                    for ($i = $level; $i > $newLevel; $i--){
                        echo '</ul></li>';
                    }
                }

                ?>
                <li>
                    <a href="<?php echo $item->getCategoryUrl() ?>">
                        <?php echo $block->escapeHtml($item->getTitle()) ?>
                        <span class="template-count">
                            <?php if ($block->showTemplatesCount()) { ?>
                                (<?php echo $block->escapeHtml($item->getTemplatesCount()) ?>)
                            <?php } ?>
                        </span>
                    </a>

                    
                    <?php
                    $level = $newLevel;
                    $first = false;
                    }
                    ?>
            </ul>
        </div>
    </div>
<?php } ?>

