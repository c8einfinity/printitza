<?php if ($block->displayColors()) { ?>
    <?php $_colorCollection = $block->getColorCollection(); ?>
    <?php if ($_colorCollection->count()) { ?>
    <div class="block related">
        <div class="block-title title">
            <strong id="block-relatedcolors-heading" role="heading" aria-level="2">
                <?php echo __('Related Colors') ?>
            </strong>
        </div>
        <ol class="block-content">
            <?php foreach ($_colorCollection as $_color) { ?>
                <li class="item">
                    <a class="color-item-link"
                       href="<?php echo $_color->getColorUrl() ?>">
                        <?php echo $block->escapeHtml($_color->getTitle()); ?>
                    </a>
                </li>
            <?php } ?>
        </ol>
    </div>
    <?php } ?>
<?php } ?>